
<%= turbo_frame_tag @post do%>

  <div class="post_creation">
    <div class="post_creation_heading"> 
      <h4>Create Post</h4>
      <%= link_to close_path do  %>
      <svg xmlns="http://www.w3.org/2000/svg" width="40px" lenght="40x" viewBox="0 0 24 24" fill="none" id="close">
        <path id="Vector" d="M18 18L12 12M12 12L6 6M12 12L18 6M12 12L6 18" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
 
      </svg>
<%end%>
    </div>
     
  <%= form_with model: @post do |form|%>
  
  <div class="field">
    
    <%= form.text_field :body, class: 'form-control', placeholder: 'Let your friends know whats happening' %>
  </div>
    <%= form.file_field :images, class: 'inputfile', multiple: true %>
    <div class="actions">
    <%= form.submit "Create post" %>
  </div>
  <%end%>
  

</div>
<%end%>

